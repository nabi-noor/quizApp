<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_question"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_question"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp.NoActionBar">
        <activity android:name=".activities.QuestionActivity" android:theme="@style/Theme.QuizApp">
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.LoginIntro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>